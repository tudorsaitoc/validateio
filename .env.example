# Environment Configuration
NODE_ENV=development
PYTHON_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# Database (Supabase)
# For Supabase, use the connection string from your Supabase project settings
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
USE_SUPABASE_AUTH=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=validateio

# Vector Store (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./.chroma

# External APIs
SERPER_API_KEY=your_serper_api_key
RESEND_API_KEY=your_resend_api_key

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Cloud Storage
GCS_BUCKET_NAME=validateio-assets
GCS_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Feature Flags
ENABLE_MARKETING_AGENT=false
ENABLE_EXPERIMENT_AGENT=true
ENABLE_RESEARCH_AGENT=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=false